<body>

<h2>ðŸš¨ DenÃºncias</h2>
<div id="lista"></div>

<script>
let denuncias=JSON.parse(localStorage.getItem("denuncias"))||[];

function resolver(id){
 denuncias=denuncias.filter(d=>d.id!==id);
 localStorage.setItem("denuncias",JSON.stringify(denuncias));
 render();
}

function render(){
 lista.innerHTML="";
 denuncias.forEach(d=>{
  lista.innerHTML+=`
   <div class="card">
    <p>Tipo: ${d.tipo}</p>
    <p>Livro: ${d.livro}</p>
    <p>Por: ${d.por}</p>
    <button onclick="resolver(${d.id})">Marcar como resolvido</button>
   </div>`;
 });
}

render();
</script>
</body>
</html>
